#-*- coding: utf-8 -*-
import zipfile
import json

class ScratchReader():
    def __init__(self,thefile):
        self.thefile = thefile
        self.projectJSON = [];
        self.projectString = "";
  
    def readfile(self):
        zfile = zipfile.ZipFile(self.thefile,"r")
        try:
            zfile.extract("project.json",path = "/tmp/")
        except:
            return("Error extracting project.json. Not sb2 file? Not write permissions?")
        try:
            f = open('/tmp/project.json')
            return(f.read().decode('utf-8'))
        except:
            return("Problem reading project.json. Permission problems?")
                

    
    def parseJSON(self):
	return self.readfile()
	
